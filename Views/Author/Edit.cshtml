@model Book
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2 text-center">
            <h2 class="text-primary">Update Author Details</h2>
            <hr />

        </div>


        <div class="mb-3" >
            <label asp-for="AuthorName"></label>
            <input asp-for="AuthorName" class=" form-control" />
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label >Upload Author Image</label>
            <input name=image class=" form-control" type="file" />
            
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="width:150px">Back to Home</a>
        </div>
</form>


