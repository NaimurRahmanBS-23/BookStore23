@model Book
<div class="border p-3 mt-4">
    <div class="row pb-2 text-center">
        <h2 class="text-primary">Book Details</h2>
        <hr />
        
    </div>

   
    <table>
        <td>
            <div class="w-75 btn-group" role="group">
                 <a asp-controller="Add" asp-action="Edit" asp-route-id="@ViewBag.Book.Id" style="white-space: nowrap;">
                 <h3 class="text text-primary ">Update</h3>
                 </a>
                <a asp-controller="Add" asp-action="Delete" asp-route-id="@ViewBag.Book.Id" style="padding-left:10px">
                    <h3 class="text text-primary ">Delete</h3>
                </a>

            </div>
        </td>
    
    </table>
    <div class="row">

        <div class="col-10">
            <h5>Cover image :</h5>
            <img src="@ViewBag.Book.CoverImage" style="height:100px" />
        </div>

    </div>
    <table>
        <tbody>
            <tr>
                <td>
                    <h5>Book Name : @ViewBag.Book.Name</h5>
                </td>
            </tr>
            <tr>
                <td>
                    <h5>Book Author : 
                        <a asp-controller="Author" asp-action="Index" asp-route-id="@ViewBag.Book.Id">

                        @ViewBag.Book.AuthorName
                        </a>
                    </h5>
                </td>
                
            </tr>
            <tr>
                <td>
                    <h5>Book Language : @ViewBag.Book.Language</h5>
                </td>
            </tr>
            <tr>
                <td>
                    <h5>Book Details : @ViewBag.Book.BookDetails</h5>
                </td>
            </tr>
            
        
        </tbody>
    </table>
 </div>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}



